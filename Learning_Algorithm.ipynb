    "\"\"\"\n",
    "Loss functions\n",
    "\"\"\"\n",
    "def mean_squared_error(y, t):\n",
    "    return 0.5 * np.sum((y - t) ** 2)\n",
    "\n",
    "def cross_entropy_error(y, t):\n",
    "    delta = 1e-7   # Avoid overflow\n",
    "    return -np.sum(t * np.log(y + delta))"
   ]
